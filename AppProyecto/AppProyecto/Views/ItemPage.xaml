<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppProyecto.Views.ItemPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>

                <Label 
                    Text="Mantenimiento de Artículo"
                    VerticalOptions="Start" 
                    FontSize="Medium"
                    HorizontalOptions="CenterAndExpand" 
                    Margin="50,50,50,0"/>

                <Entry x:Name="TxtName" Placeholder="Nombre" Margin="50,30,50,0"/>
                <Entry x:Name="TxtCode" Placeholder="Código" Margin="50,30,50,0" />
                <Editor x:Name="TxtDescription" Placeholder="Descripción" HeightRequest="200" Margin="50,30,50,0" />

                <Button x:Name="BtnAction" Text="Guardar" Margin="80,50,80,0" CornerRadius="20" Clicked="BtnAction_Clicked" BackgroundColor="#1c0d5e"/>


            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>